<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <% if user_signed_in? and current_page?(manage_request_path) %>
      <th scope="col">Status</th>
      <%end%>
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %> 
    <%= render 'posts/post_in_table' ,post: post%>
  <% end %>
  </tbody>
</table>