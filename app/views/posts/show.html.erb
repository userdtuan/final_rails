<p style="color: green"><%= notice %></p>

<%= render @post %>
<% if (current_user and current_user.id == @post.user_id and @post.is_job==false) or (current_seller and current_seller.id == @post.user_id and @post.is_job==true)%>
    <div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete %>
</div>
<% end %>

