    <% total_pages = (@total_jobs.count / @per_page.to_f).ceil %>
    <nav aria-label="Pagination">
        <hr class="my-0" />
        <ul class="pagination justify-content-center my-4">
            <li class="page-item <%= @page.to_i==1 ? "disabled" : " "%>"><a class="page-link" href="<%= current_page?(root_path) ? page_path(page: @page.to_i-1) : category_job_path(keyword: @category_key, page: @page.to_i-1)%>">Newer</a>
            </li>
            <% (1..total_pages).each do |page| %>
                <li class="page-item <%= @page.to_i===page ? "active" : " "%>"><a class="page-link" href="<%=page_path(page: page)%>"><%=page%></a></li>
            <% end %>
            <li class="page-item <%= @page.to_i==total_pages ? "disabled" : " "%>"><a class="page-link" href="<%=page_path(page: @page.to_i+1)%>">Older</a></li>
        </ul>
    </nav>

    <%# current_page?(root_path) %>
